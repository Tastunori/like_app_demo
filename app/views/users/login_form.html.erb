

<body>

  <div class=form_top>
    <h1>ログインして日々の感謝を伝えよう</h1>
  </div>
<div class="login_top">
<%= form_tag("/login") do %>
 <div class="login_form">
   <div class="login_name">
   <p>ユーザー名</p>
   <input name="name">
   </div>
   <div class="login_password">
   <p>パスワード</P>
   <input type="password" name="password">
   </div>
   <p><input type="submit" value="ログイン" class="login_button"></P>

 <% if @error_message %>
   <div class="form_error">
    <%= @error_message %>
   </div>
  </div>
  <% end %>
 <% end %>

 <p class="to_sigun_up"><%= link_to("新規登録はこちら", "/sigun_up") %></p>


</div>
</body>
